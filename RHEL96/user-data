#cloud-config
autoinstall:
  version: 1
  early-commands:
    # Stop ssh for packer to stop it thinking the VM is ready
    - sudo systemctl stop ssh
  locale: en_US
  keyboard:
    layout: us
  identity:
    hostname: rhel-server
    username: redhat
    password: "$1$YMJ4Z2oB$yzj239cF7oGJku0gI5NDX."
  ssh:
    install-server: true
    allow-pw: true
  packages: 
    - openssh-server
    - open-vm-tools
    - cloud-init
    - isc-dhcp-client
  storage:
    layout:
      name: direct
  network:
    network:
      version: 2
      ethernets:
        ens192:
          dhcp4: true
  user-data:
    disable_root: false
  late-commands:
    - echo 'redhat ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/redhat
    - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/redhat
    - curtin in-target --target=/target -- sudo firewalld enable
    - curtin in-target --target=/target -- sudo firewalld allow ssh
    - sudo systemctl start ssh