#cloud-config
autoinstall:
  version: 1
  early-commands:
    # Stop ssh for packer to stop it thinking the VM is ready
    - sudo systemctl stop ssh
  locale: en_US
  keyboard:
    layout: us
  identity:
    hostname: ubuntu-server
    username: ubuntu
    password: "$1$vFQ7ioGq$hpFhe06ZRYkbJF950dyb21"
  ssh:
    install-server: true
    allow-pw: true
  packages: 
  - openssh-server
  - open-vm-tools
  - cloud-init
  - isc-dhcp-client
  storage:
    layout:
      name: direct
  network:
    network:
      version: 2
      ethernets:
        ens192:
          dhcp4: true
  user-data:
    disable_root: false
  late-commands:
    - echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu
    - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/ubuntu
    - curtin in-target --target=/target -- sed -i 's/^GRUB_CMDLINE_LINUX_DEFAULT=.*$/GRUB_CMDLINE_LINUX_DEFAULT=""/' /etc/default/grub
    - curtin in-target --target=/target -- update-grub
    - curtin in-target --target=/target -- sudo ufw enable
    - curtin in-target --target=/target -- sudo ufw allow ssh
    - sudo systemctl start ssh